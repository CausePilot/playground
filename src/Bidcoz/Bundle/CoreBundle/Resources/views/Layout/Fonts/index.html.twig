{% set fonts = [
	{ name: 'Open Sans', url: 'Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800'},
	{ name: 'Roboto', url: 'Roboto:100,100italic,300,300italic,400,400italic,500,500italic,700,700italic,900,900italic'},
	{ name: 'Lato', url: 'Lato:100,300,400,700,900,100italic,300italic,400italic,700italic,900italic'},
	{ name: 'PT Sans', url: 'PT+Sans:400,700,400italic,700italic'},
	{ name: 'Source Sans Pro', url: 'Source+Sans+Pro:200,200italic,300,300italic,400,400italic,600,600italic,700,700italic,900,900italic'},
	{ name: 'Exo', url: 'Exo:100,200,300,400,500,600,700,800,900,900italic,800italic,700italic,600italic,500italic,400italic,300italic,200italic,100italic'},
	{ name: 'Ubuntu', url: 'Ubuntu:300,300italic,400,400italic,500,500italic,700,700italic'},
	{ name: 'Istok Web', url: 'Istok+Web:400,700,400italic,700italic'},
	{ name: 'Nobile', url: 'Nobile:400,700italic,400italic,700'},
	{ name: 'Oswald', url: 'Oswald:400,300,700'},
	{ name: 'Raleway', url: 'Raleway:900,800,700,600,500,400,300,200,100'},
	{ name: 'Oxygen', url: 'Oxygen:400,700,300'}
] %}

{% if theme is defined %}
	{% set route = app.request.get('_route') %}
	{% for font in fonts %}
		{% if route == 'campaign_manage_theme' or route == 'organization_manage_theme' %}
			<link type="text/css" rel="stylesheet" href="//fonts.googleapis.com/css?family={{ font.url }}" />
		{% elseif theme.themeName and font.name == theme.themeName %}
			<link type="text/css" rel="stylesheet" href="//fonts.googleapis.com/css?family={{ font.url }}" />
		{% endif %}
	{% endfor %}
{% endif %}
